@model LojaVirtual.Web.Models.ProdutoViewModel

<div class="modal fade" id="modalEdicao" tabindex="-1" aria-labelledby="produtoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AtualizarProduto" asp-route-Handle="@Model.Handle" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="produtoModalLabel">Atualização dos produtos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <form>
                    <div class="modal-body">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Handle" />
                        <div class="form-group">
                            <label class="control-label">Descrição</label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label class="control-label">Preço</label>
                                <input asp-for="Preco" asp-format="{0:N2}" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>

                            <div class="form-group col-sm-4">
                                <label  class="control-label">Percentual Desc</label>
                                <input asp-for="PercentualDescontoAvista" asp-format="{0:N2}" class="form-control" />
                            </div>

                            <div class="form-group col-sm-4">
                                <label asp-for="Estoque" class="control-label"></label>
                                <input asp-for="Estoque" class="form-control" />
                                <span asp-validation-for="Estoque" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CategoriaId" class="control-label"></label>
                            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MarcaId" class="control-label"></label>
                            <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId"></select>
                            <span asp-validation-for="MarcaId" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="padding-top: 10px">
                            <button type="submit" class="btn btn-primary">
                                <span class="fas fa-save"></span>
                            </button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <span class="fas fa-cancel"></span>
                            </button>
                        </div>

                    </div>
                </form>
            </form>
            </div>
        </div>
    </div>