@model LojaVirtual.Web.Models.Compostas.ProdutoImagensViewModel

<div class="modal fade" id="modalAdicao" tabindex="-1" aria-labelledby="ImagemProdutoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <form id="formUploadImagem"
                  enctype="multipart/form-data">

                @Html.AntiForgeryToken()

                <input type="hidden" name="HandleProduto" value="@Model.HandleProduto" />

                <div class="modal-header">
                    <h5 class="modal-title" id="ImagemProdutoModalLabel">
                        Adicionando imagens do produto
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <div id="fileError" class="alert alert-danger" style="display:none"></div>
                        <input name="Files" type="file" class="form-control" multiple accept=".webp" />
                        <span class="text text-success" id="fileSucess"></span>
                    </div>

                    <div class="mb-3" id="listaImagens">
                        @if (Model.ImagemProdutos != null && Model.ImagemProdutos.Any())
                        {
                            foreach (var img in Model.ImagemProdutos)
                            {
                                <img src="@img.Url"
                                     class="img-thumbnail me-2 mb-2"
                                     alt="Imagem do Produto"
                                     style="max-width:125px; max-height:125px; object-fit:cover;" />
                            }
                        }
                        else
                        {
                            <p>Nenhuma imagem disponível para este produto.</p>
                        }
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <span class="fas fa-save"></span>
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <span class="fas fa-cancel"></span>
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("formUploadImagem").addEventListener("submit", function (e) {
        e.preventDefault();

        let form = e.target;
        let formData = new FormData(form);

        fetch("@Url.Action("AdicionarImagemProduto", "Produtos")", {
            method: "POST",
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById("listaImagens").innerHTML = data.html; 
                document.getElementById("fileError").innerText = "";
                document.getElementById("fileError").style.display = "none";
                document.getElementById("fileSucess").innerText = data.message;
                form.reset();
            } else {
                document.getElementById("fileSucess").innerText = "";
                document.getElementById("fileError").innerText = data.message;
                document.getElementById("fileError").style.display = "block";
            }
        })
        .catch(data => {
            document.getElementById("fileError").innerText = "Erro inesperado ao enviar imagem: " + data.message;
            document.getElementById("fileError").style.display = "block";
            console.error(data);
        });
    });
</script>